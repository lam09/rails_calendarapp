<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js' %>
<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js' %>

<div class="row">
  <h1 class="title text-center">Register</h1>
</div>
<div class="row">
  <div class="col-lg-offset-2">
    <%= form_for @event, html: {class: "form-horizontal"} do |f| %>
<!--      <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js"></script>-->
<!--      <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>-->

      <script type="text/javascript">
          $(document).ready($(function () {
              $('.datetimepicker').datetimepicker({
                  locale: 'en',
                  format: 'YYYY-MM-DD hh:mm:ss',
              });
          }));
      </script>



      <div class="form-group text-center">
        <%= f.label :name, "Name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter event name" %>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.label :created_by, "Created by", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :created_by, class: "form-control", placeholder: "Event owner" %>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.label :start, "Start time", class: "col-md-2 control-label" %>
        <div class="input-group date col-md-6 datetimepicker">
          <%= f.text_field :start, class: "form-control" %>
          <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.label :end, "End time", class: "col-md-2 control-label" %>
        <div class="input-group date col-md-6 datetimepicker">
          <%= f.text_field :end, class: "form-control" %>
          <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
        </div>
      </div>
      <div class="form-group text-center">
        <div class="col-lg-offset-2">
          <%= f.submit "Register", class: "btn btn-success" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
