<div class="row">
  <h1 class="title text-center">Register</h1>
</div>
<div class="row">
  <div class="col-lg-offset-2">
    <%= form_for @event, html: {class: "form-horizontal"} do |f| %>
      <div class="form-group text-center">
        <%= f.label :name, "Name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter event name" %>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.label :created_by, "Created by", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :created_by, class: "form-control", placeholder: "Event owner" %>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.label :start, "Start time", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :start, class: "form-control", placeholder: "start time" %>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.label :end, "End time", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :end, class: "form-control", placeholder: "end time" %>
        </div>
      </div>
      <div class="form-group text-center">
        <div class="col-lg-offset-4">
          <%= f.submit "Register", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>